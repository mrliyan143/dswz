<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nkl.page.dao.IUserDao">

	<insert id="addUser" parameterType="User">
		<![CDATA[
			insert into user
				values(null,#{user_name},#{user_pass},#{real_name},#{nick_name},#{user_address},#{user_mail},#{user_phone},#{user_money},#{user_photo},#{reg_date},#{user_kind},#{invalid_date},#{user_type})
		]]>
	</insert>

	<delete id="delUser" parameterType="int">
		<![CDATA[
			delete from user where user_id=#{user_id}
		]]>
	</delete>

	<delete id="delUsers" parameterType="int">
		<![CDATA[
			delete from user where user_id in 
		]]>
		<foreach collection="array" item="user_ids"  open="(" separator="," close=")">
			#{user_ids}
		</foreach>
	</delete>

	<update id="updateUser" parameterType="User">
		<![CDATA[
			UPDATE user
		]]>
		<set>
			<if test="user_pass!=null and user_pass!=''">
			<![CDATA[
				user_pass = #{user_pass},
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				real_name = #{real_name},
			]]>
			</if>
			<if test="nick_name!=null and nick_name!=''">
			<![CDATA[
				nick_name = #{nick_name},
			]]>
			</if>
			<if test="user_address!=null and user_address!=''">
			<![CDATA[
				user_address = #{user_address},
			]]>
			</if>
			<if test="user_mail!=null and user_mail!=''">
			<![CDATA[
				user_mail = #{user_mail},
			]]>
			</if>
			<if test="user_phone!=null and user_phone!=''">
			<![CDATA[
				user_phone = #{user_phone},
			]]>
			</if>
			<if test="user_photo!=null and user_photo!=''">
			<![CDATA[
				user_photo = #{user_photo},
			]]>
			</if>
			<if test="user_kind!=0">
			<![CDATA[
				user_kind = #{user_kind},
			]]>
			</if>
			<if test="invalid_date!=null and invalid_date!=''">
			<![CDATA[
				invalid_date = #{invalid_date}
			]]>
			</if>
			
		</set>
		<![CDATA[
			where user_id = #{user_id}
		]]>
	</update>
	
	<update id="updateUserMoney" parameterType="User">
		<![CDATA[
			UPDATE user
		]]>
		<set>
			<if test="user_money!=-1">
			<![CDATA[
				user_money = #{user_money}
			]]>
			</if>
		</set>
		<![CDATA[
			where user_id = #{user_id}
		]]>
	</update>

	<select id="getUser" parameterType="User" resultType="User">
		<![CDATA[
			SELECT * FROM user
		]]>
		<where>
			<if test="user_id!=0">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name = #{user_name}
			]]>
			</if>
			<if test="user_pass!=null and user_pass!=''">
			<![CDATA[
				and user_pass = #{user_pass}
			]]>
			</if>
			<if test="user_type!=0">
			<![CDATA[
				and user_type = #{user_type}
			]]>
			</if>
			<if test="user_types!=null and user_types!=''">
			<![CDATA[
				and user_type in (${user_types})
			]]>
			</if>
		</where>
	</select>

	<select id="listUsers" parameterType="User" resultType="User">
		<![CDATA[
			SELECT * FROM (
			SELECT * FROM user
		]]>
		<where>
			<if test="user_id!=0">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name like '%${user_name}%'
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				and real_name like '%${real_name}%'
			]]>
			</if>
			<if test="nick_name!=null and nick_name!=''">
			<![CDATA[
				and nick_name like '%${nick_name}%'
			]]>
			</if>
			<if test="user_type!=0">
			<![CDATA[
				and user_type = #{user_type}
			]]>
			</if>
			<if test="user_types!=null and user_types!=''">
			<![CDATA[
				and user_type in (${user_types})
			]]>
			</if>
			<if test="user_kind!=0">
			<![CDATA[
				and user_kind = #{user_kind}
			]]>
			</if>
		</where>
		<![CDATA[
			order by user_id asc) t
		]]>
		<if test="start!=-1">
		<![CDATA[
			Limit ${start},${limit}
		]]>
		</if>
	</select>

	<select id="listUsersCount" parameterType="User" resultType="int">
		<![CDATA[
			SELECT count(*) FROM user
		]]>
		<where>
			<if test="user_id!=0">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name like '%${user_name}%'
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				and real_name like '%${real_name}%'
			]]>
			</if>
			<if test="nick_name!=null and nick_name!=''">
			<![CDATA[
				and nick_name like '%${nick_name}%'
			]]>
			</if>
			<if test="user_type!=0">
			<![CDATA[
				and user_type = #{user_type}
			]]>
			</if>
			<if test="user_types!=null and user_types!=''">
			<![CDATA[
				and user_type in (${user_types})
			]]>
			</if>
			<if test="user_kind!=0">
			<![CDATA[
				and user_kind = #{user_kind}
			]]>
			</if>
		</where>
	</select>

</mapper>
